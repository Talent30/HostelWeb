		<div id="form">
			<form action="mailto:info@nelsonhostel.tk" method="post" >
				<label for="fname">First Name *</label>
				<input type="text" id="fname" name="firstname" placeholder="Your first name.." required>

				<label for="lname">Last Name *</label>
				<input type="text" id="lname" name="lastname" placeholder="Your last name.." required>

				<label for="phone">Phone</label>
				<input type="text" name="phone" placeholder="+64 21-123-456">

				<label for="email">Email *</label>
				<input type="text" name="email" placeholder="info@nelsonhostel.tk" required>

				<label for="subject">Subject</label>
				<select name="subject">
					<option selected value="reservation">Reservation</option>
					<option value="modification">Modification</option>
					<option value="cancellation">Cancellation</option>
					<option value="policy">Policy</option>
					<option value="other">Others</option>
				</select>

				<label for="country">Country</label>
				<select id="country" name="country">
					<option selected value="NZ">New Zealnad</option>
					<option value="AU">Australia</option>
					<option value="CA">Canada</option>
					<option value="USA">USA</option>
					<option value="CHINA">China</option>
				</select>

				<label for="body">Message *</label></br>
				<textarea name="body" placeholder="type messages..." required></textarea>

				<input type="submit" vaule="Submit">
			</form>
